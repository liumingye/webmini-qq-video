{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node", "vite/client"]
  }
}
